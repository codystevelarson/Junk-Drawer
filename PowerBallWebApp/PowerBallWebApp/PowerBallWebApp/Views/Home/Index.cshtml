@model PowerBallWebApp.Models.Ticket

@{
    /**/

    ViewBag.Title = "Index";
}

<h2>Welcome To Powerball.com!</h2>

<div class="row">
    <!--Make this an action link-->
    @using (Html.BeginForm("Create", "Home", FormMethod.Get))
    {
        <div class="form-group">
            <div class="col-sm-4">
                <button class="btn btn-success btn-block">Create Ticket</button>
            </div>
        </div>
    }

    @using (Html.BeginForm("AutoCreate", "Home", FormMethod.Post))
    {

        <div class="form-group">
            <div class="col-sm-4">
                <div class="col-sm-4">
                    <input type="number" class="form-control" name="numberOfTickets" id="numberOfTickets" />
                </div>
                <div class="col-sm-8">
                    <button class="btn btn-danger btn-block">Auto-Pick Ticket</button>
                </div>
            </div>
        </div>
    }

    <div class="col-sm-4">
        <a href="/Home/LookupTicket" class="btn btn-primary btn-block">Lookup Ticket</a>
    </div>
</div>
